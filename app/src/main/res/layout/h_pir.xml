<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/PinRoom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="4dp"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/title4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/type_pir"
            android:textColor="@color/colorPrimaryText" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:id="@+id/ll4_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t4d1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/pir_1" />

            <TextView
                android:id="@+id/t4p1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingStart="5dp" />


            <TextView
                android:id="@+id/t4f1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingStart="6dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll4_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/unresolved_colour"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t4d2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/pir_2" />

            <TextView
                android:id="@+id/t4p2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingStart="5dp" />

            <TextView
                android:id="@+id/t4f2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingStart="6dp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll4_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t4d3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/pir_3" />

            <TextView
                android:id="@+id/t4p3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingStart="5dp" />


            <TextView
                android:id="@+id/t4f3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingStart="6dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll4_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/unresolved_colour"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t4d4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/pir_4" />

            <TextView
                android:id="@+id/t4p4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingStart="5dp" />


            <TextView
                android:id="@+id/t4f4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingStart="6dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll4_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/t4d5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="@string/pir_5" />

            <TextView
                android:id="@+id/t4p5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:paddingStart="5dp" />

            <TextView
                android:id="@+id/t4f5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:paddingStart="6dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />


        <TextView
            android:id="@+id/tv_comment4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end" />

        <Button
            android:id="@+id/bn_comment4"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_gravity="end"
            android:background="@drawable/ic_comment_black_24dp" />


    </LinearLayout>


</android.support.v7.widget.CardView>