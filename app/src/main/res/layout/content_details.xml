<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/cardview_light_background"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activities.DetailsActivity"
    tools:showIn="@layout/activity_details">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@android:color/darker_gray"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_course_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_number"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Electrical Circuits and Analysis"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/event_prof_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_course_title"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Professors"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/event_prof_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_prof_label"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:text="Bijoy Krishna Das, Soumya Dutta, Deleep R Nair, Kalyaan Kumar B"
                android:textColor="#000000"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/event_content_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_prof_details"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="Course content"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/event_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_content_label"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:text="Sinusoidal steady state analysis, phasors, response to periodic inputs,
power and energy."
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
