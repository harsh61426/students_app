<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ac.iitm.students.complaint_box.activities.g_Comments">

    <android.support.v7.widget.CardView
        android:id="@+id/comment_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfilePicture"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_color="#FFd3d3d3"
                    app:civ_border_width="1dp" />


                <LinearLayout
                    android:id="@+id/comment_ll_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@+id/imgProfilePicture"
                    android:layout_toLeftOf="@+id/comment_ll_resolve"
                    android:layout_toRightOf="@id/imgProfilePicture"
                    android:layout_toStartOf="@+id/comment_ll_resolve"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/comment_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/comment_tv_hostel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hostel" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_ll_resolve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/comment_tv_is_resolved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text="TextView" />


                    <TextView
                        android:id="@+id/comment_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="4dp"
                        android:text="3-7-17" />


                </LinearLayout>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/comment_tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:paddingTop="4dp"
                android:text="Title"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/comment_tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:paddingTop="4dp"
                android:text="Description"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/comment_tv_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="4dp"
                android:paddingEnd="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingStart="16dp"
                android:paddingTop="4dp"
                android:text="Tags"
                android:textSize="15sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">


                <Button
                    android:id="@+id/comment_bn_upvote"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/ic_keyboard_arrow_up_black_24dp" />

                <TextView
                    android:id="@+id/comment_tv_upvote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:text="upvote" />

                <Button
                    android:id="@+id/comment_bn_downvote"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/ic_keyboard_arrow_down_black_24dp" />

                <TextView
                    android:id="@+id/comment_tv_downvote"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:background="#FFFFFF"
                    android:padding="8dp"
                    android:text="downvote" />

                <Button
                    android:id="@+id/comment_bn_comment"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/ic_message_black_24dp" />

                <TextView
                    android:id="@+id/comment_tv_comment"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="2"
                    android:padding="8dp"
                    android:text="comment" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/new_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/comment_card"
        android:layout_alignLeft="@+id/comment_card"
        android:layout_alignRight="@+id/comment_card"
        android:layout_alignStart="@+id/comment_card"
        android:layout_below="@+id/comment_card"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_comments"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignEnd="@+id/comment_card"
            android:layout_alignLeft="@+id/comment_card"
            android:layout_alignRight="@+id/comment_card"
            android:layout_alignStart="@+id/comment_card"
            android:layout_below="@+id/comment_card"
            android:layout_weight="3">

        </android.support.v7.widget.RecyclerView>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/bn_save"
            android:layout_alignEnd="@+id/rv_comments"
            android:layout_alignStart="@+id/rv_comments"
            android:layout_weight="1"
            android:background="@drawable/tv_border"
            android:gravity="start"
            android:hint="Enter your comment here.."
            android:inputType="text|textMultiLine"
            android:padding="10dp" />


        <Button
            android:id="@+id/bn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/new_ll"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/new_ll"
            android:text="SAVE" />
    </LinearLayout>

</RelativeLayout>

