<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="64dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            style="@style/cardview"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:cardElevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/mitr"
                    style="@style/department_type"
                    android:background="@color/ew_card_color"
                    android:text="@string/type_mitr" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/mitr_image"
                    style="@style/circle_imageview"
                    android:layout_below="@+id/mitr"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/mitr"
                    android:layout_toEndOf="@+id/mitr_image"
                    android:layout_toRightOf="@+id/mitr_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/mitr_name"
                        style="@style/profile_name"
                        android:text="@string/mitr_name" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mitr_name"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/mail_mitr"
                            style="@style/image_button"
                            android:layout_marginEnd="@dimen/image_button_margin"
                            android:layout_marginRight="@dimen/image_button_margin"
                            android:src="@drawable/ic_email_black_24dp" />

                        <ImageButton
                            android:id="@+id/phone_mitr"
                            style="@style/image_button"
                            android:src="@drawable/ic_phone_black_24dp" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            style="@style/cardview"
            app:cardElevation="@dimen/card_elevation">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/cfi"
                    style="@style/department_type"
                    android:background="@color/ew_card_color"
                    android:text="@string/type_cfi" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cfi_image"
                    style="@style/circle_imageview"
                    android:layout_below="@+id/cfi"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cfi"
                    android:layout_toEndOf="@+id/cfi_image"
                    android:layout_toRightOf="@+id/cfi_image"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/cfi_name"
                        style="@style/profile_name"
                        android:text="@string/cfi_name" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cfi_name"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/mail_cfi"
                            style="@style/image_button"
                            android:layout_marginEnd="@dimen/image_button_margin"
                            android:layout_marginRight="@dimen/image_button_margin"
                            android:src="@drawable/ic_email_black_24dp" />

                        <ImageButton
                            android:id="@+id/phone_cfi"
                            style="@style/image_button"
                            android:src="@drawable/ic_phone_black_24dp" />

                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>