<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_home_feed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:minHeight="72dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/rl_home_feed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_home_feed_icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingLeft="18dp"
            android:paddingRight="16dp"
            android:src="@mipmap/ic_launcher"
            android:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/link_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp"
            android:src="@drawable/ic_link_black_24dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/text_title_home_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/iv_home_feed_icon"
            android:layout_toRightOf="@id/iv_home_feed_icon"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:text="Title appears here"
            android:textAlignment="inherit"
            android:textColor="@color/colorPrimaryText"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_home_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_title_home_feed"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/iv_home_feed_icon"
            android:layout_toRightOf="@id/iv_home_feed_icon"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingBottom="4dp"
            android:paddingLeft="16dp"
            android:paddingRight="8dp"
            android:text="Details appear here"
            android:textColor="@color/colorSecondaryText"
            android:textSize="16sp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>