<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@android:color/darker_gray"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="Abhishek Rao"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/event_prof_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="Grading"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/event_prof_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_prof_label"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:text="Introducing our one and only solo singing competition Alankar where you can battle it out with over a hundred vocalists while being judged by the best singing talents out there."
            android:textColor="#000000"
            android:textSize="16sp" />




        <TextView
            android:id="@+id/event_content_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_prof_details"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Course experience"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/event_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_content_label"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp"
            android:text="Introducing our one and only solo singing competition Alankar where you can battle it out with over a hundred vocalists while being judged by the best singing talents out there."
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/bg_separating_line"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_below="@id/event_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:foreground="@android:color/darker_gray" />

        <RatingBar
            android:id="@+id/rating_bar"
            style="@android:style/Widget.DeviceDefault.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bg_separating_line"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"

            android:isIndicator="true"
            android:numStars="5"
            android:progressBackgroundTint="#FFFFD700"
            android:progressTint="#FFFFD700"
            android:rating="2.5"
            android:secondaryProgressTint="#FFFFD700"
            android:stepSize="0.5" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
