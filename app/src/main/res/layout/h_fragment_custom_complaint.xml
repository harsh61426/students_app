<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ll_custom_complaints"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textView_custom_complaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_complaint"
            android:textAppearance="?android:attr/textAppearanceLarge" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_addImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/fab_margin"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_attachment_black_24dp"
            android:visibility="gone"
            app:backgroundTint="#DCEDC8"
            app:elevation="8dp" />

        <TextView
            android:id="@+id/textView_complaint_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/complaint_title" />
        <EditText
            android:id="@+id/til_complaint_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView_complaint_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/complaint_description" />

        <EditText
            android:id="@+id/til_complaint_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textView_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/tag" />
        <EditText
            android:id="@+id/til_complaint_tag"
            android:layout_width="wrap_content"
            android:hint="#secretary"
            android:ems="10"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/button_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="32dp"
            android:background="@color/colorPrimary"
            android:text="@string/save"/>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
